GET     /                           translator.controllers.PageController.home

GET     /user                       translator.controllers.UserController.current
POST    /authenticate               translator.controllers.UserController.authenticate
DELETE  /logout                     translator.controllers.UserController.logout

GET     /projects                   translator.controllers.ProjectController.list

GET     /:project/entries           translator.controllers.EntryController.list(project)
POST    /:project/entries           translator.controllers.EntryController.create(project)
PUT     /:project/entries/:id       translator.controllers.EntryController.update(project, id)
DELETE  /:project/entries/:id       translator.controllers.EntryController.delete(project, id)

GET     /:project/languages         translator.controllers.LanguageController.list(project)
POST    /:project/languages         translator.controllers.LanguageController.create(project)
PUT     /:project/languages/:id     translator.controllers.LanguageController.update(project, id)
DELETE  /:project/languages/:id     translator.controllers.LanguageController.delete(project, id)

GET     /assets/*file               controllers.Assets.at(path="/public", file)
